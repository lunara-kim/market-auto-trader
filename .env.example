# 한국투자증권 API
KIS_APP_KEY=your_app_key
KIS_APP_SECRET=your_app_secret
KIS_ACCOUNT_NO=your_account_number
KIS_MOCK=true

# Database
DATABASE_URL=postgresql://trader:trader@localhost:5432/market_trader

# OpenAI
OPENAI_API_KEY=your_openai_key

# App
APP_ENV=development
LOG_LEVEL=INFO

# ── 매매 설정 (TRADING_ 접두사) ──
# 수수료/세금 (기본값: 한투 온라인 기준)
# TRADING_BUY_COMMISSION_RATE=0.00015
# TRADING_SELL_COMMISSION_RATE=0.00015
# TRADING_TOTAL_SELL_TAX_RATE=0.0023

# 이동평균 전략 기본값
# TRADING_MA_SHORT_WINDOW=5
# TRADING_MA_LONG_WINDOW=20
# TRADING_MA_SIGNAL_THRESHOLD=0.0

# 리스크 관리
# TRADING_MAX_RISK_PER_TRADE_PCT=1.0
# TRADING_MAX_POSITION_SIZE_PCT=20.0
# TRADING_MAX_DAILY_LOSS_PCT=3.0

# 원샷 주문 금액 상한 (원)
# TRADING_ONESHOT_MAX_NOTIONAL_KRW=1000000

# ── 백테스트 설정 (BACKTEST_ 접두사) ──
# BACKTEST_INITIAL_CAPITAL=10000000.0
# BACKTEST_COMMISSION_RATE=          # 미설정 시 TRADING_ 값 사용
# BACKTEST_SELL_TAX_RATE=            # 미설정 시 TRADING_ 값 사용
# BACKTEST_RISK_FREE_RATE=0.035
# BACKTEST_TRADING_DAYS_PER_YEAR=252

# ── 포트폴리오 리밸런싱 설정 (PORTFOLIO_ 접두사) ──
# 목표 포트폴리오 비중 (JSON 형식: {"종목코드": 비중%})
# 예시: PORTFOLIO_TARGET_ALLOCATIONS={"005930": 30.0, "000660": 20.0}
# PORTFOLIO_TARGET_ALLOCATIONS={}

# 리밸런싱 임계값 (목표 비중 ±5% 이탈 시 리밸런싱)
# PORTFOLIO_REBALANCE_THRESHOLD_PCT=5.0

# 최소 거래 금액 (5만 원 미만 주문 방지)
# PORTFOLIO_MIN_TRADE_AMOUNT_KRW=50000

# 단일 종목 최대 주문 비율 (한 번에 10% 이상 주문 방지)
# PORTFOLIO_MAX_SINGLE_ORDER_PCT=10.0

# 리밸런싱 모드 ("threshold": 임계값 초과 시만, "proportional": 전체 비례)
# PORTFOLIO_REBALANCE_MODE=threshold
